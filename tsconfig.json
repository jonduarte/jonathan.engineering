{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "ES2020",
        "module": "CommonJS",
        "allowJs": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./scripts/**/*"
    ]
}